<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="anpr_peage_dashboard_analytic" owl="1">
    <div class="tw-h-full tw-overflow-y-auto tw-bg-[#f1f5f9] tw-px-6 tw-py-8 tw-space-y-10 tw-font-[Inter]">

      <!-- Cartes Statistiques -->
      <div class="tw-grid tw-grid-cols-1 sm:tw-grid-cols-2 lg:tw-grid-cols-4 tw-gap-6">
        <t t-set="stats" t-value="globalStats()" />
        <t t-foreach="[
          {
            label: 'MANUEL',
            value: stats.total_manual,
            color: 'tw-border-t-blue-500',
            icon: '/anpr_peage_manager/static/src/img/manual.png',
            bg: 'tw-bg-blue-100',
            diff: 2.5
          },
          {
            label: 'MOBILE',
            value: stats.total_mobile,
            color: 'tw-border-t-green-500',
            icon: '/anpr_peage_manager/static/src/img/sim-card.png',
            bg: 'tw-bg-green-100',
            diff: -0.4
          },
          {
            label: 'GLOBAL',
            value: stats.total,
            color: 'tw-border-t-purple-500',
            icon: '/anpr_peage_manager/static/src/img/global.png',
            bg: 'tw-bg-purple-100',
            diff: 1.1
          },
          {
            label: 'Transactions',
            value: stats.transactions,
            color: 'tw-border-t-yellow-500',
            icon: '/anpr_peage_manager/static/src/img/transaction.png',
            bg: 'tw-bg-yellow-100',
            diff: 0.0
          }
        ]" t-as="card" t-key="card.label">

          <div class="tw-bg-white tw-rounded-xl tw-shadow-sm tw-border-t-4 tw-p-6 tw-flex tw-items-center tw-justify-between" t-att-class="card.color">
            
            <!-- Texte à gauche -->
            <div class="tw-flex-1 tw-pr-4">
              <div class="tw-text-base tw-font-medium tw-text-gray-900">
                <t t-esc="'Total ' + card.label" />
              </div>
              <div class="tw-text-sm tw-text-gray-500">
                <t t-esc="state.start" /> – <t t-esc="state.end" />
              </div>
              <div class="tw-text-2xl tw-font-semibold tw-text-gray-800 tw-mt-2">
                <t t-esc="card.label === 'Transactions' ? card.value : formatCurrency(card.value)" />
              </div>
            </div>

            <!-- Cercle légèrement agrandi avec icône centrée et discrète -->
            <div class="tw-w-12 tw-h-12 tw-rounded-full tw-border tw-border-gray-300 tw-bg-white tw-flex tw-items-center tw-justify-center tw-shadow-sm" t-att-class="card.bg">
              <img t-att-src="card.icon" class="tw-w-5 tw-h-5" />
            </div>
          </div>
        </t>
      </div>

      <!-- Bar chart -->
      <div class="tw-bg-white tw-rounded-xl tw-shadow tw-p-6">
        <div class="tw-flex tw-items-center tw-justify-between tw-mb-5">
          <h2 class="tw-text-xl tw-font-bold tw-text-gray-800">Transactions mensuelles</h2>
        </div>
        <div class="tw-relative tw-h-[300px]">
          <canvas t-ref="chartRef" class="tw-w-full tw-h-full"></canvas>
        </div>
      </div>

      <!-- Période affichée -->
      <div class="tw-text-center tw-text-sm tw-text-gray-500" t-if="!state.loading &amp;&amp; state.start &amp;&amp; state.end">
        Données du <t t-esc="state.start" /> au <t t-esc="state.end" />
      </div>

      <!-- Caissiers + Donut -->
      <div class="tw-grid tw-grid-cols-1 lg:tw-grid-cols-3 tw-gap-6">

        <!-- Caissiers -->
        <div class="lg:tw-col-span-2 tw-space-y-5">
          <t t-foreach="state.stats" t-as="user" t-key="user.id">
            <div class="tw-bg-white tw-rounded-xl tw-shadow tw-flex tw-items-center tw-justify-between tw-p-5 hover:tw-shadow-md">
              <div class="tw-flex tw-items-center tw-space-x-4">
                <img t-att-src="user.avatar" class="tw-w-14 tw-h-14 tw-rounded-full tw-object-cover tw-border" />
                <div>
                  <h3 class="tw-font-bold tw-text-gray-800 tw-text-base" t-esc="user.name" />
                  <p class="tw-text-gray-500 tw-text-sm" t-esc="formatCurrency(user.total)" />
                </div>
              </div>
              <button class="tw-bg-blue-600 tw-text-white tw-text-sm tw-font-medium tw-px-5 tw-py-2 tw-rounded-lg hover:tw-bg-blue-700 tw-transition-all">
                Voir les transactions
              </button>
            </div>
          </t>
        </div>

        <!-- Donut chart -->
        <div class="tw-bg-white tw-rounded-xl tw-shadow tw-p-6">
          <h2 class="tw-text-xl tw-font-bold tw-text-gray-800 tw-text-center tw-mb-4">Répartition par caissier</h2>
          <div class="tw-relative tw-h-[260px]">
            <canvas t-ref="donutRef" class="tw-w-full tw-h-full"></canvas>
          </div>
        </div>
      </div>
    </div>
  </t>
</templates>