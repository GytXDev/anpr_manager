<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Menu principal -->
    <menuitem id="menu_anpr_peage_root"
              name="OTECHPEAGE"
              sequence="10"/>

    <!-- Action 0 : Vue OWL - Caisse -->
    <record id="action_client_cash_drawer_screen" model="ir.actions.client">
      <field name="name">Caisse</field>
      <field name="tag">anpr_peage_cash_drawer_screen</field>
    </record>

    <menuitem id="menu_peage_cash_drawer_screen"
              name="Caisse"
              parent="menu_anpr_peage_root"
              action="action_client_cash_drawer_screen"
              sequence="1"/>

    <!-- Action 1 : Vue OWL - Dashboard principal -->
    <record id="action_client_peage_dashboard" model="ir.actions.client">
      <field name="name">Tableau de bord PÃ©age</field>
      <field name="tag">anpr_peage_dashboard</field>
    </record>

    <menuitem id="menu_peage_dashboard"
              name="Tableau de bord"
              parent="menu_anpr_peage_root"
              action="action_client_peage_dashboard"
              sequence="2"/>

    <!-- Vue de liste : Transactions ANPR -->
    <record id="view_anpr_log_list" model="ir.ui.view">
      <field name="name">anpr.log.list</field>
      <field name="model">anpr.log</field>
      <field name="arch" type="xml">
        <list string="Historique des Transactions ANPR" delete="true">
          <field name="plate"/>
          <field name="vehicle_type"/>
          <field name="payment_status"/>
          <field name="amount"/>
          <field name="paid_at"/>
          <field name="transaction_message"/>
        </list>
      </field>
    </record>

    <record id="action_anpr_log_list_only" model="ir.actions.act_window">
      <field name="name">Historique des Transactions</field>
      <field name="res_model">anpr.log</field>
      <field name="view_mode">list</field>
      <field name="view_id" ref="view_anpr_log_list"/>
    </record>

    <menuitem id="menu_anpr_log_list"
              name="Historique des transactions"
              parent="menu_anpr_peage_root"
              action="action_anpr_log_list_only"
              sequence="3"/>

  </data>
</odoo>